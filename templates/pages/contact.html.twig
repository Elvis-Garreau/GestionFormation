{% extends 'base.html.twig' %}

{% block title  %}

    FORM'Abil - Contact

{% endblock %}

{% block body %}

    <div class="right-side">
        <h1>Contact</h1>
        {% for message in app.flashes('succes') %}

            <div class="alert alert-success">
                {{ message }}
            </div>

        {% endfor %}
        {{ form_start(form) }}
        <div class="row contact-container">
            <div class="col-md-12">
                {{ form_row(form.choixcontact) }}
            </div>
            <div class="col-md-12 mt-3">
                {{ form_row(form.objet) }}
            </div>
            <div class="col-md-12 mt-3">
                {{ form_row(form.message) }}
            </div>
        </div>
        <div class="text-center">
            <button class="btn btn-primary mt-4">{{ button | default('Envoyer') }}</button>
        </div>
        {{ form_end(form) }}
    </div>

{% endblock %}
