{% extends 'base.html.twig' %}

{% block title 'FORM\'Abil - Formateurs' %}

{% block body %}

    <div class="right-side">
        {% if app.user and app.user.organisme.filename %}
            <div class="row mt-4 ofLogo">
                <img src="{{ vich_uploader_asset(app.user.organisme, 'imageFile') }}" alt="logo de l'organisme">
            </div>
        {% endif %}
        <div class="row mt-4">
            <h1>Les Formateurs de {{ app.user.organisme.nomOf }}</h1>
        </div>
        <div class="row mt-4">
            {% for formateur in formateurs %}
                    <div class="col-md-4 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">{{ formateur.formateurNom }} {{ formateur.formateurPrenom }}</h5>
                                <hr>
                                <p class="card-text">Adresse mail : {{ formateur.formateurMail }}</p>
                                <p class="card-text">Numéro de téléphone : {{ formateur.telephoneFormated }}</p>
                                <a href="{{ path('formateur.show', {id: formateur.id, slug: formateur.slug}) }}" class="btn btn-primary">Voir</a>
                                <a href="{{ path('admin.formateur.edit', {id: formateur.id}) }}" class="btn btn-primary">Éditer</a>
                            </div>
                        </div>
                    </div>
            {% endfor %}
            <div class="row mt-3">
                <div>
                    <a href="{{ path('admin.formateurs.index') }}" class="btn btn-primary" style="margin-right: 15px">Gérer mes formateurs</a>
                    <a href="{{ path('admin.formateur.new') }}" class="btn btn-primary">+ Ajouter un Formateur</a>
                </div>
            </div>
        </div>
    </div>

{% endblock %}