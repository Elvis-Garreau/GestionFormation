{%  extends 'login.html.twig' %}

{% block title 'FORM\'Abil - Connection' %}

{% block body %}

    <div class="login-page">
        <div class="container mt-4">

            <div>
                <img class="logo-left" src="/logo-formabil-fond-blanc.png" alt="logo FORM Abil">
            </div>

            {% if error %}
                <div class="alert alert-danger">{{ error.messageKey | trans(error.messageData, 'security') }}</div>
            {% endif %}

            <form action="{{ path('login') }}" method="post" >
                <div class="form-group">
                    <label for="username">Adresse e-Mail :</label>
                    <input type="text" id="username" name="_username" class="form-control" value="{{ last_username }}">
                </div>
                <div class="form-group mt-2">
                    <label for="password">Mot de passe :</label>
                    <input type="password" id="password" name="_password" class="form-control">
                </div>
                <button class="btn btn-primary mt-4" type="submit">Connexion</button>
            </form>
        </div>
    </div>

{% endblock %}