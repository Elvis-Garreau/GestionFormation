{% extends 'base.html.twig' %}

{% block title 'FORM\'Abil - Modifier Module' %}

{% block body %}

    <div class="right-side">
        {% if app.user and app.user.organisme.filename %}
            <div class="row mt-4 ofLogo">
                <img src="{{ vich_uploader_asset(app.user.organisme, 'imageFile') }}" alt="logo de l'organisme">
            </div>
        {% endif %}
        <div class="row mt-4">
            <h1>Modifier un module</h1>
        </div>
        {{ form_start(form) }}
        <div class="row mt-4">
            {{ form_row(form.nom_module) }}
        </div>
        <div class="row mt-4">
            {{ form_label(form.nombre_heure) }}
        </div>
        <div class="row col-md-1" style="padding-left: 10px">
            {{ form_widget(form.nombre_heure) }}
        </div>
        <div class="row mt-4">
            {{ form_row(form.description) }}
        </div>
        <button class="btn btn-primary mt-4">{{ button | default('Modifier') }}</button>
        {{ form_end(form) }}
    </div>

{% endblock %}