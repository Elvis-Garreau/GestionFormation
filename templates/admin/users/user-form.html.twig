{{ form_start(form) }}
<div class="row mt-4">
    <div class="col-md-3">{{ form_row(form.nom) }}</div>
    <div class="col-md-3">{{ form_row(form.prenom) }}</div>
</div>
<div class="row mt-2">
    <div class="col-md-3">{{ form_row(form.email.first) }}</div>
    <div class="col-md-3">{{ form_row(form.email.second) }}</div>
</div>
<div class="row mt-2">
    <div class="col-md-3">{{ form_row(form.plainPassword.first) }}</div>
    <div class="col-md-3">{{ form_row(form.plainPassword.second) }}</div>
</div>
<div class="row mt-2">
    <div class="col-md-2">{{ form_row(form.organisme) }}</div>
</div>
<div class="row mt-2">
    <div class="col-md-2">{{ form_row(form.roleAdmin) }}</div>
</div>
<button class="btn btn-primary mt-4">{{ button | default('Appliquer') }}</button>
{{ form_end(form) }}